<!-- activity_edit_book.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditBookActivity">

    <EditText
        android:id="@+id/editTextBookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Book Name"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/editTextBookImageLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Book Image Link"
        android:layout_below="@id/editTextBookName"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/buttonUpdateBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Book"
        android:layout_below="@id/editTextBookImageLink"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>
</RelativeLayout>
